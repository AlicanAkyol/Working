item.ToDateTime(SqlDateTime.MinValue.Value,format:"dd.MM.yyyy HH:mm")  -- > 4 Temmuz 2017 11:18

Select * From Table Order By ColumnName desc  -- > largest to smallest

*****  -- > Drop Table
BEGIN TRANSACTION

IF EXISTS (SELECT 1 FROM [INFORMATION_SCHEMA].[TABLES] WHERE [TABLE_NAME] = N'TABLENAME')
BEGIN
	DROP TABLE [TABLENAME]
	PRINT 'TABLENAME DROP TABLE'
END

COMMIT TRANSACTION
*****

*****
BEGIN TRANSACTION  -- > Create Table

IF NOT EXISTS (SELECT 1 FROM [INFORMATION_SCHEMA].[TABLES] WHERE [TABLE_NAME] = N'TABLENAME')
BEGIN
	CREATE TABLE dbo.TABLENAME (
	  Id uniqueidentifier NOT NULL,
	  Name nvarchar(256) NOT NULL,
	  UId uniqueidentifier NULL,
	  CONSTRAINT PK_TABLENAME PRIMARY KEY (Id),
	  CONSTRAINT FK_ANYTABLENAME FOREIGN KEY (UId) REFERENCES dbo.ANYTABLENAME (Id)
	)
	PRINT 'TABLENAME CREATE TABLE'
END
COMMIT TRANSACTION
